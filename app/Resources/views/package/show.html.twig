{% extends 'base.html.twig' %}

{% block body %}
    <h1>Package</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ package.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ package.name }}</td>
            </tr>
            <tr>
                <th>Bigdaddy</th>
                <td>{{ package.bigDaddy }}</td>
            </tr>
            <tr>
                <th>Speeddaddy</th>
                <td>{{ package.speedDaddy }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ package.user }}</td>
            </tr>
            <tr>
                <th>Weight</th>
                <td>{{ package.weight }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ package.statut }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('package_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('package_edit', { 'id': package.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
